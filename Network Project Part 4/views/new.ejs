

           <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Item</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <%- include('./partials/header.ejs')%>
    <main>
        <h1>List a New Item</h1>
        <form action="/items" method="post" enctype="multipart/form-data">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title"  required><br>

            <p>Seller Name: <%= firstName %> <%= lastName %></p>
            <label for="seller">Seller:</label>
           
            <label for="condition">Condition:</label>
            <select name="condition" id="condition">
                <option value="new">New</option>
                <option value="used">Used</option>
            </select>
            <br>
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" oninput="validatePrice(this)"><br>

            <script>
                function validatePrice(input) {
                    let value = parseFloat(input.value);
                    if (value.toFixed(2) != input.value) {
                        input.setCustomValidity('Please enter a number with exactly two decimal places.');
                    } else {
                        input.setCustomValidity('');
                    }
                }
                </script>
            <label for="details">Details:</label>
            <input type="text" id="details" name="details"  required><br>
            <label for="image">Image:</label>
            <input type="file" id="image" name="image" accept="image/*" required><br>
            <label for="totalOffers">Total Offers:</label>
            <input type="number" id="totalOffers" name="totalOffers"  required><br>
            <label for="active">Active:</label>
            <input type="checkbox" id="active" name="active" checked><br>
            <button type="submit">Submit</button>
        </form>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>

        